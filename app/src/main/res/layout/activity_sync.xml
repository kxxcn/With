<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_auth"
        style="@style/HorizontalConstraintParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanummyeongjo"
        android:text="@string/text_auth2"
        android:textColor="@color/text_welcome"
        app:layout_constraintBottom_toTopOf="@id/tfb_key"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_center"
        style="@style/FillConstraintParent"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/tfb_key"
        style="@style/FillConstraintParent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:counterTextColor="@color/box_helper"
        app:hasClearButton="true"
        app:helperText="전달받은 인증번호를 입력하세요."
        app:helperTextColor="@color/box_helper"
        app:maxCharacters="8"
        app:primaryColor="@color/box_primary"
        app:useDenseSpacing="false">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/et_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/text_auth_input"
            tools:text="1234 5678"/>

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <com.unstoppable.submitbuttonview.SubmitButton
        android:id="@+id/btn_sync"
        style="@style/HorizontalConstraintParent"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:buttonColor="@color/btn_auth"
        app:buttonText="@string/text_sync"
        app:buttonTextSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_center"
        app:progressStyle="loading"/>

</android.support.constraint.ConstraintLayout>