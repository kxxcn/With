<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primary_app</item>
    </style>

    <style name="VerticalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HorizontalLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TopTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/title</item>
        <item name="android:textColor">@color/overall_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="IconImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="EditFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">175dp</item>"
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/fab_edit</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="DeleteFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">230dp</item>"
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/fab_delete</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="WriteFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">120dp</item>"
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/fab_write</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="PackFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>"
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/fab_pack</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="RefreshFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>"
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/fab_refresh</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="RefreshFloatingActionButton2" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>"
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/fab_refresh</item>
        <item name="backgroundTint">@color/bg_tint_fab</item>
    </style>

    <style name="RadioRealButtonGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rrbg_backgroundColor">@color/default_background</item>
        <item name="rrbg_dividerColor">@android:color/black</item>
        <item name="rrbg_dividerPadding">10dp</item>
        <item name="rrbg_dividerSize">1dp</item>
        <item name="rrbg_radius">1dp</item>
        <item name="rrbg_selectorSize">0dp</item>
    </style>

    <style name="RadioRealButtonCollect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rrb_drawable">@drawable/ic_collect_non_clicked</item>
    </style>

    <style name="RadioRealButtonExpand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rrb_drawable">@drawable/ic_expand_clicked</item>
    </style>

    <style name="RadioRealButtonCalendar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rrb_drawable">@drawable/ic_cal_clicked</item>
    </style>

    <style name="RadioRealButtonTodo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rrb_drawable">@drawable/ic_todo_non_clicked</item>
    </style>

    <style name="PlaceTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DateTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VerticalDivisionLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@color/division_line</item>
    </style>

    <style name="HorizontalDivisionLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/division_line</item>
    </style>

    <style name="ScheduleHintEditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HorizontalConstraintParent">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="VerticalConstraintParent">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="FillConstraintParent">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="SpinKitViewProgressbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="SpinKit_Color">@color/progressbar_default</item>
        <item name="SpinKit_Style">ThreeBounce</item>
    </style>

    <style name="SettingTitleTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/bg_setting_row</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_setting</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SettingContentTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SettingToggleButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="tbAsDefaultOn">true</item>
        <item name="tbBorderWidth">1dp</item>
        <item name="tbOffBorderColor">@color/toggle_off</item>
        <item name="tbOnColor">@color/toggle_on</item>
    </style>

    <style name="BackImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@drawable/ic_arrow_back</item>
    </style>

    <style name="PasswordTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_password_number</item>
        <item name="android:fontFamily">@font/yanolja</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WithTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/namsan</item>
    </style>

</resources>
